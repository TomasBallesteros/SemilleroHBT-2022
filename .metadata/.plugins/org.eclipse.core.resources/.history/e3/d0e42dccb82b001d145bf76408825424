package com.hbt.semillero.bean;

import javax.ejb.Stateless;
import javax.ejb.TransactionAttribute;
import javax.ejb.TransactionAttributeType;
import javax.ejb.TransactionManagement;
import javax.ejb.TransactionManagementType;
import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;
import javax.persistence.Query;

import org.apache.log4j.Logger;

import com.hbt.semillero.dtos.ConsultarComicTamanioNombreDTO;
import com.hbt.semillero.poo.interfaces.IConsultarServicioTamanioNombreLocal;

/**
 * 
 * <b>Descripci√≥n:<b> Clase que determina
 * <b>Caso de Uso:<b> Semillero2021
 * @author Tomas Ballesteros
 * @version 
 */

@Stateless
@TransactionManagement(TransactionManagementType.CONTAINER)
public class ConsultarServicioTamanioNombreBean implements IConsultarServicioTamanioNombreLocal {
private final static Logger LOGGER = Logger.getLogger(ConsultarServicioTamanioNombreBean.class);
	
	@PersistenceContext
	private EntityManager em;
	
	@Override
	@TransactionAttribute(TransactionAttributeType.NOT_SUPPORTED)
	public ConsultarComicTamanioNombreDTO consultarComicTamanioNombre(short lengthComic) {
		LOGGER.info("Inicia ejecucion consultarComicTamanioNombre() ");
		
		ConsultarComicTamanioNombreDTO dto = new ConsultarComicTamanioNombreDTO();
		String consultaNombreComic = "SELECT new com.hbt.semillero.dtos.ConsultarComicTamanioNombreDTO(nombre) "
				+ " FROM Comic "
				+ " WHERE id = :idComic ";
		try {
			Query queryConsultarNombreComic = em.createQuery(consultaNombreComic);
			queryConsultarNombreComic.setParameter("idComic", 1L);
			dto = (ConsultarComicTamanioNombreDTO) queryConsultarNombreComic.getSingleResult();
			dto.setExitoso(true);
			dto.setMensajeEjecucion("Comics procesados exitosamente");
			//Excepcion por superar length
		} catch (Exception e) {
			dto.setExitoso(false);
			dto.setMensajeEjecucion("Se ha presentado un error tecnico " + e.getMessage());
			LOGGER.info("Se ha presentado un error tecnico " + e.getMessage());
		}
		
		LOGGER.info("Finaliza ejecucion consultarComicTamanioNombre() ");
		
		return dto;
	}
}
